    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova categoria:</h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/categorias/nova" method="post">
            <label for="nom">Nome:</label>
            <input type="text" name="nome" id="nom" autocomplete="off" placeholder="Nome da categoria" class="form-control">
            <label for="slg">Slug:</label>
            <input type="text" name="slug" id="slg" placeholder="Slug" class="form-control">
            <br>
            <button type="submit" class="btn btn-success">
                Adicionar categoria
            </button>
        </form>
    </div>
</div>